<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themegray"
    tools:context="com.example.hesolutions.demoui.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backimage2"
        android:alpha="0.2"
        android:id="@+id/blurimage"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2">
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/whatever">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/label"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:alpha = "0"
                android:visibility="invisible"
                android:layout_height="100dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/control"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="invisible" />
            <com.example.hesolutions.demoui.MyNumberPicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_below="@+id/label"
                android:id="@+id/numberpicker">
            </com.example.hesolutions.demoui.MyNumberPicker>
            <com.example.hesolutions.demoui.MyNumberPicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_below="@+id/label"
                android:id="@+id/windowpicker">
            </com.example.hesolutions.demoui.MyNumberPicker>
            <com.example.hesolutions.demoui.MyNumberPicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_below="@+id/label"
                android:id="@+id/temppicker">
            </com.example.hesolutions.demoui.MyNumberPicker>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/unithorizon"
            android:layout_toRightOf="@+id/whatever"
            android:id="@+id/basefloorplan" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/whatever">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temp"
                android:background="@drawable/tempclick"
                android:layout_marginLeft="570dp"
                android:layout_marginTop="250dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/light1"
                android:background="@drawable/lightclick"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="170dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="410dp"
                android:id="@+id/light2"
                android:background="@drawable/lightclick"
                android:layout_marginTop="170dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/light3"
                android:background="@drawable/lightclick"
                android:layout_marginLeft="650dp"
                android:layout_marginTop="170dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:id="@+id/light4"
                android:background="@drawable/lightclick"
                android:layout_marginTop="360dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="410dp"
                android:background="@drawable/lightclick"
                android:id="@+id/light5"
                android:layout_marginTop="360dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="650dp"
                android:id="@+id/light6"
                android:background="@drawable/lightclick"
                android:layout_marginTop="360dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:id="@+id/camera"
                android:background="@drawable/camera"
                android:layout_marginTop="250dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="710dp"
                android:id="@+id/window"
                android:background="@drawable/windowclick"
                android:layout_marginTop="160dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:src="@drawable/basefilter"
        android:id="@+id/basefilter"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/linearLayout"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_marginLeft="30dp"
            android:background="@drawable/horizonwhite"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="15dp"
            android:format12Hour="EEEE"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:id="@+id/currenday"
            android:layout_marginTop="28dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/currentime"
            android:textColor="@color/white" />
        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="15dp"
            android:id="@+id/currentyear"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:layout_centerVertical="true"
            android:format12Hour="MMM dd, yyyy"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/currentime"
            android:textColor="@color/white" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textSize="40dp"
            android:id="@+id/currentime"
            android:layout_alignParentRight="true"
            android:format12Hour="hh:mm aa"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/gray"
        android:layout_above="@+id/linearLayout2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:background="@drawable/backclick"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:id="@+id/goback" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/settingclick"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:id="@+id/gofunction" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/reportclick"
            android:layout_gravity="center"
            android:id="@+id/goreport" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/homeclick"
            android:id="@+id/gomain"/>
    </LinearLayout>

</RelativeLayout>
